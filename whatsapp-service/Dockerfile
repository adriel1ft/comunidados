# Dockerfile para whatsapp-service
FROM node:18-slim


WORKDIR /app

# Instala dependências do Chromium para Puppeteer
RUN apt-get update && apt-get install -y \
	wget \
	ca-certificates \
	fonts-liberation \
	libappindicator3-1 \
	libasound2 \
	libatk-bridge2.0-0 \
	libatk1.0-0 \
	libcups2 \
	libdbus-1-3 \
	libdrm2 \
	libgbm1 \
	libgtk-3-0 \
	libnspr4 \
	libnss3 \
	libx11-xcb1 \
	libxcomposite1 \
	libxdamage1 \
	libxrandr2 \
	xdg-utils \
	--no-install-recommends && \
	rm -rf /var/lib/apt/lists/*

# Copia arquivos do projeto
COPY . /app

# Instala dependências
RUN npm install


# Porta padrão
EXPOSE 3001

# Entrypoint
CMD ["npm", "start"]
